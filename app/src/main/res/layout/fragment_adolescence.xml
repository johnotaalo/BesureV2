<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AdolescenceFragment">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_middle"
        app:rowCount="3"
        app:alignmentMode="alignMargins"
        app:columnOrderPreserved="false"
        app:columnCount="1">
        <android.support.v7.widget.CardView
            android:id="@+id/one2one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:cardElevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/shape_circle"
                        android:src="@drawable/ic_headset"
                        android:padding="@dimen/spacing_middle"
                        android:tint="@color/colorPrimary"/>

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="One2One 1190"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/peerEducationBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:cardElevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/shape_circle"
                        android:src="@drawable/ic_education"
                        android:padding="@dimen/spacing_middle"
                        android:tint="@color/colorPrimary"/>

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="Peer Education"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/auntJaneBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:cardElevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:background="@drawable/shape_circle"
                        android:src="@drawable/ic_business_woman"
                        android:padding="@dimen/spacing_middle"
                        android:tint="@color/colorPrimary"/>

                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="Aunt Jane"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.GridLayout>

</FrameLayout>